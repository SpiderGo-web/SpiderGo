<go>
    headline := "Test Title"
    body := "This is the test body."
    testIfFalse := false
    testIfTrue := true
</go>
<style>
    .test {
        background-color: #0000FF;
        color: #222222;
    }
</style>
<web>
<div class="test">
    <h2>{{ headline }}</h2>
    <p>{{ body }}</p>
    {#if testIfFalse}
        <p>You should be hidden</p>
    {/if}
    {#if testIfTrue}
        <p>You should be visible</p>
    {/if}
</div>
</web>